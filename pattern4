#include<iostream>
using namespace std;

int main(int args,char** argv)
{   int n;
cin>>n;
    int nst=1,nsp=n-1;
    for(int i=1;i<=n;i++)
    {
        for(int csp=1;csp<=nsp;csp++)
        {
            cout<<" ";

        }
        for(int cst=1;cst<=nst;cst++)
        {
            cout<<"*";

        }
        nst++;
        nsp--;
        cout<<endl;
    }
}
